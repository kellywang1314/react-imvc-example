{
  "extends": "react-imvc/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    // "declaration": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["esnext", "dom.iterable", "dom"],
    "types": ["node", "express"],
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "Todo": ["src/page/Todo/type.d.ts"]
    }
  },
  "include": [
    "src",
    "routes"
  ]
}